---
layout: default
---
{% if page._styles %}
  <!-- Page/Post style -->
  <style type="text/css">
    {{ page._styles }}
  </style>
{% endif %}

<div class="post">
  <header class="post-header">
    <h1 class="post-title">{{ page.title }}</h1>
    <p class="post-meta">
      {% if page.date %}
        <i class="fa-solid fa-calendar"></i> {{ page.date | date: "%B %-d, %Y" }}
        {% if page.date_end %} - {{ page.date_end | date: "%B %-d, %Y" }}{% endif %}
      {% endif %}
    </p>
    {% if page.event %}
      <p class="post-meta">
        <i class="fa-solid fa-chalkboard-user"></i> {{ page.event }}
      </p>
    {% endif %}
    {% if page.location %}
      <p class="post-meta">
        <i class="fa-solid fa-location-dot"></i> {{ page.location }}
      </p>
    {% endif %}
    {% if page.description %}
      <p class="post-description">{{ page.description }}</p>
    {% endif %}
  </header>

  <!-- Links -->
  {% if page.slides or page.pdf or page.video or page.code %}
    <div class="links mb-3">
      {% if page.slides %}
        <a href="{{ page.slides | relative_url }}" class="btn btn-sm z-depth-0" role="button" target="_blank">
          <i class="fa-solid fa-file-powerpoint"></i> Slides
        </a>
      {% endif %}
      {% if page.pdf %}
        <a href="{{ page.pdf | relative_url }}" class="btn btn-sm z-depth-0" role="button" target="_blank">
          <i class="fa-solid fa-file-pdf"></i> PDF
        </a>
      {% endif %}
      {% if page.video %}
        <a href="{{ page.video }}" class="btn btn-sm z-depth-0" role="button" target="_blank">
          <i class="fa-brands fa-youtube"></i> Video
        </a>
      {% endif %}
      {% if page.code %}
        <a href="{{ page.code }}" class="btn btn-sm z-depth-0" role="button" target="_blank">
          <i class="fa-solid fa-code"></i> Code
        </a>
      {% endif %}
    </div>
  {% endif %}

  <article>
    {% if page.abstract %}
      <h2>Abstract</h2>
      <p class="abstract">{{ page.abstract }}</p>
    {% endif %}
    
    {{ content }}
  </article>

  {% if page.related_publications %}
    <h2>References</h2>
    <div class="publications">
      {% bibliography --cited_in_order %}
    </div>
  {% endif %}

  {% if site.giscus and page.giscus_comments %}
    {% include giscus.liquid %}
  {% endif %}
</div>
